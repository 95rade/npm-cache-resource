#! /bin/bash -eu
set -o pipefail

DEST_DIR="$1"

GIT_DEST_DIR="$(mktemp -d -t git-resource-destination.XXXXXX)"

/opt/resource/git/in "$GIT_DEST_DIR"

cd "$GIT_DEST_DIR"
ls

echo "Installing npm modules!!"

NODE_ENV=development npm install

echo "Installed npm modules!!"
ls

cp -a node_modules "$DEST_DIR/"